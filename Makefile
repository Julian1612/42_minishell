NAME		= minishell

LIBFT		= libft/libft.a

SRC			= main.c

OBJ_DIR		= ./obj/

OBJ			= $(addprefix $(OBJ_DIR),$(SRC:.c=.o))

CC			= cc

CFLAGS		= -Wall -Wextra -Werror

INCLUDES	= -I./includes -I./libft/includes

LINCLUDES	= -L./libft -lft

g			= \033[1;32m
de 			= \033[0m
r 			= \033[0;31m
w			= \033[0;97m
d 			= \033[1;2;30m
hb 			= \033[1;34m
db 			= \033[0;34m
db 			= \033[38;5;017m
b			= \033[0;30m
br          = \033[38;5;215m
wb			= \033[48;5;015m
brb			= \033[48;5;137m

--minishell_img:
	@echo "             $(b)â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„$(de)"
	@echo "         $(b)â–„â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–„$(de)"
	@echo "       $(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–ˆâ–ˆâ–“â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â• â•¬$(b)â–ˆâ–ˆ$(de)"
	@echo "      $(b)â•“â–ˆâ–ˆ$(g)â•¬â•£$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ$(de)"
	@echo "      $(b)â–ˆ$(g)â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–“â–ˆâ–€â–ˆâ–ˆâ–ˆâ–„$(de)"
	@echo "     $(b)â–ˆ$(g)â•¬â•¬$(b)â–“â–’$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬$(b)â–ˆâ–ˆâ–“â–€â–€â””$(wb)        $(de)$(b)â–ˆâ”€$(de)"
	@echo "    $(b)â–ˆâ–ˆ$(bb)â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–“â–ˆâ–ˆâ–€â–€â”€$(wb)             $(b)â–Œ$(de)"
	@echo "    $(b)â–ˆ$(g)â–’â•£$(b)â–ˆâ–ˆâ–ˆ$(g)â• â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–€ $(wb)        $(b)â–„â–ˆâ–ˆâ–ˆâ–ˆ$(brb)â–€â–ˆ$(wb)  â–ˆ$(b)â”€$(de) â–ˆâ–ˆâ–ˆ    â–ˆâ–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆ    â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ   â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ      â–ˆâ–ˆ"
	@echo " $(b)$(wb)â–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€â–€          â–„â–„$(b)â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(de)$(brb)â–‘ $(b)â–ˆâ–€$(de)   â–ˆâ–ˆâ–ˆâ–ˆ  â–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆ   â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ      â–ˆâ–ˆ   â–ˆâ–ˆ â–ˆâ–ˆ      â–ˆâ–ˆ      â–ˆâ–ˆ"
	@echo "$(b)â•Ÿâ–Œ$(wb)                   â–„â–ˆ$(de)$(b)$(brb)â–€â–€â–‘â–‘â–‘$(b)$(brb)â–€â–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(br)â–‘â–‘$(b)â–ˆ$(de)    â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ  â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆ   â–ˆâ–ˆ      â–ˆâ–ˆ  "
	@echo " $(b)â–€â–„$(wb)          â–„â–„$(de)$(b)â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ$(brb)â–Œâ–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘$(b)â–ˆ$(de)      â–ˆâ–ˆ  â–ˆâ–ˆ  â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ  â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ      â–ˆâ–ˆ â–ˆâ–ˆ   â–ˆâ–ˆ â–ˆâ–ˆ      â–ˆâ–ˆ      â–ˆâ–ˆ    "
	@echo "   $(b)â””â•™â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(brb)â–€â–‘â–‘â–‘$(b)â•™â–€â–€â–ˆ$(brb)â–„â–‘â–‘â–‘â–‘$(b)â•¦â–„$(brb)â–‘â–‘â–‘â–‘$(b)â–ˆ$(de)      â–ˆâ–ˆ      â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ   â–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆ   â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	@echo "       $(b)â•™â–ˆâ–„$(brb)â–‘â–‘â–‘â–‘â–‘â–‘â–‘$(br)â–‘â–‘â–‘â–‘â–‘$(b)â•™â–€â–„â–„â–„$(brb)â–‘â–‘$(b)$(brb)â• â–ˆ$(b)â–€â–€â–€$(de)"
	@echo "         $(b)â•™â–€â–ˆâ–ˆ$(brb)â–„$(br)â–‘â–‘â–‘$(b)$(brb)â–€â–„â–„$(br)â–‘â–‘â–‘â–‘â–‘$(b)â–„â–ˆâ–€â–€â–€$(de)"
	@echo "            $(b)â”€â•™â•™â–€â–€â–€â–ˆâ–ˆâ–ˆâ–€â–€â–€â–€â•™$(de)"
	@echo "----------------------------------------------------------------------------------------------------------------------"
     
all: $(NAME)

obj:
	@mkdir -p $(OBJ_DIR)

obj/%.o: src/%.c
	@echo "$(g)Compiling  $(w)$<$(de)"
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@
                    
$(NAME): --minishell_img obj $(OBJ)
	@$(MAKE) -C ./libft
	@$(CC) $(OBJ) $(CFLAGS) $(INCLUDES) $(LIBFT) $(LINCLUDES) -o $(NAME)
	@echo "$(g)Compiling Done âœ”ï¸$(de)"

clean:
	@echo "$(r)Cleaning ðŸ§¹ $(w)...$(de)"
	@$(MAKE) clean -C libft/
	@rm -rf obj

fclean: clean
	@$(MAKE) fclean -C libft/
	@rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re