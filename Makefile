NAME		= minishell

LIBFT		= libft/libft.a

SRC			= main.c

OBJ_DIR		= ./obj/

OBJ			= $(addprefix $(OBJ_DIR),$(SRC:.c=.o))

CC			= cc

CFLAGS		= -Wall -Wextra -Werror

INCLUDES	= -I./includes -I./libft/includes

LINCLUDES	= -L./libft -lft

g			= \033[1;32m
de 			= \033[0m
r 			= \033[0;31m
w			= \033[0;97m
d 			= \033[1;2;30m
hb 			= \033[1;34m
db 			= \033[0;34m
db 			= \033[38;5;017m
b			= \033[0;30m
br          = \033[38;5;223m
wb			= \033[48;5;015m
--minishell_img:
	@echo "             $(b)â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„											$(de)"
	@echo "         $(b)â–„â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–„						$(de)"
	@echo "       $(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–ˆâ–ˆâ–“â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â• â•¬$(b)â–ˆâ–ˆ						$(de)"
	@echo "      $(b)â•“â–ˆâ–ˆ$(g)â•¬â•£$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆ			$(de)"
	@echo "      $(b)â–ˆ$(g)â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–“â–ˆâ–€â–ˆâ–ˆâ–ˆâ–„		$(de)"
	@echo "     $(b)â–ˆ$(g)â•¬â•¬$(b)â–“â–’$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬$(b)â–ˆâ–ˆâ–“â–€â–€â””$(wb)       $(de)â•™â–ˆâ”€		$(de)"
	@echo "    $(b)â–ˆâ–ˆ$(b)â•¬â•¬$(b)â–ˆ$(g)â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–“â–ˆâ–ˆâ–€â–€â”€$(wb)            â•Ÿâ–Œ				$(de)"
	@echo "    $(b)â–ˆ$(g)â–’â•£$(b)â–ˆâ–ˆâ–ˆ$(g)â• â•¬â•¬â•¬â•¬â•¬â•¬$(b)â–ˆâ–ˆâ–€â””$(wb)        $(b)â–„â–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ  â–ˆâ”€				$(de)"
	@echo " $(b)$(wb)â–ˆâ–€â””â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€â–€â””         â–„â–„$(b)â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(de)$(br)â–‘ $(b)â–ˆâ–€						$(de)"
	@echo "$(b)â•Ÿâ–Œ$(wb)                   â–„â–ˆ$(de)$(b)â–€â•™$(br)â–‘â–‘â–‘$(b)â–€â–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(br)â–‘â–‘$(b)â–ˆ				$(de)"
	@echo " $(b)â–€â–„$(wb)         â•“â–„â–„$(de)$(b)â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ$(br)â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘$(b)â–ˆ						$(de)"
	@echo "   $(b)â””â•™â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œâ–€$(br)â–‘â–‘â–‘$(b)â•™â–€â–€â–ˆâ–„$(br)â–‘â–‘â–‘â–‘$(b)â•¦â–„$(br)â–‘â–‘â–‘â–‘$(b)â–„â–€â””		$(de)"
	@echo "       $(b)â•™â–ˆâ–„$(br)â–‘â–‘â–‘â–‘â–‘â–‘â–‘$(br)â–‘â–‘â–‘â–‘â–‘$(b)â•™â–€â–„â–„â–„$(br)â–‘â–‘$(b)â• â–ˆâ–€â””				$(de)"
	@echo "         $(b)â•™â–€â–ˆâ–ˆâ–„$(br)â–‘â–‘â–‘$(b)â–€â–„â–„$(br)â–‘â–‘â–‘â–‘â–‘$(b)â–„â–ˆâ–€â–€						$(de)"
	@echo "            $(b)â”€â•™â•™â–€â–€â–€â–ˆâ–ˆâ–ˆâ–€â–€â–€â–€â•™											$(de)"

 

all: $(NAME)

obj:
	@mkdir -p $(OBJ_DIR)

obj/%.o: src/%.c
	@echo "$(g)Compiling  $(w)$<$(de)"
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@
                    
$(NAME): --minishell_img obj $(OBJ)
	@$(MAKE) -C ./libft
	@$(CC) $(OBJ) $(CFLAGS) $(INCLUDES) $(LIBFT) $(LINCLUDES) -o $(NAME)
	@echo "$(g)Compiling Done âœ”ï¸$(de)"

clean:
	@echo "$(r)Cleaning ðŸ§¹ $(w)...$(de)"
	@$(MAKE) clean -C libft/
	@rm -rf obj

fclean: clean
	@$(MAKE) fclean -C libft/
	@rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re